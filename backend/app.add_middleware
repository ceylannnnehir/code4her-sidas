from fastapi.middleware.cors import CORSMiddleware

app.add_middleware(
    CORSMiddleware,
    allow_origins=[
        "http://localhost",
        "http://127.0.0.1",
        "http://192.168.224.41",
        "http://192.168.224.41:19000",   # Expo
        "http://192.168.224.41:8081",   # Metro bundler
        "*",  # Tüm kaynaklara izin ver (geliştirme aşamasında)
    ],
    allow_credentials=True,
    allow_methods=["*"],
    allow_headers=["*"],
)
